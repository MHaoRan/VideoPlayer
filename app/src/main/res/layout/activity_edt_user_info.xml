<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/user_bg"
    tools:context="com.mhr.activity.EdtUserInfoActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <include layout="@layout/head_layout"></include>



        <com.mhr.view.CustomCircleImageView
            android:id="@+id/edtuserinfo_customImageView"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/user_man"
            ></com.mhr.view.CustomCircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"
            android:text="点击更换头像"
            >

        </TextView>
    </FrameLayout>

<TextView
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="1dp"></TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="名字"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            ></TextView>

        <EditText
            android:id="@+id/edtuserinfo_edt_name"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:hint="未命名"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="账号"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            ></TextView>

        <EditText
            android:layout_width="100dp"
            android:textAlignment="textEnd"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:hint="未登录"
            android:textSize="18sp"
            android:id="@+id/edtuserinfo_edt_account"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            ></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="简介"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            ></TextView>

        <EditText
            android:id="@+id/edtuserinfo_edt_info"
            android:layout_width="100dp"
            android:textAlignment="textEnd"
            android:layout_marginTop="100dp"
            android:layout_marginRight="10dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:hint="填不填随你"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            ></EditText>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>
