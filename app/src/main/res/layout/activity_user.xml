<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_bg"
    android:layout_weight="1"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/user_iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/userme_bg" />
        <include layout="@layout/head_layout"></include>
        </FrameLayout>

        <com.mhr.view.CustomCircleImageView
            android:id="@+id/user_customImageView"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/user_man"></com.mhr.view.CustomCircleImageView>

        <Button
            android:id="@+id/user_btn_edt"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/btn_selector"
            android:layout_marginTop="190dp"
            android:layout_marginRight="120dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="编辑资料" />

        <Button
            android:id="@+id/user_btn_friend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="190dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/btn_selector"
            android:text="+好友" />

        <TextView
            android:id="@+id/user_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="30dp"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:text="用户名" />

        <TextView
            android:id="@+id/user_tv_accountInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="账号:XXXXXX" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="300dp"
            android:background="@color/black"
            android:text="" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="320dp"
    android:layout_marginLeft="5dp"
    android:orientation="horizontal"
    >
<ImageView
    android:layout_width="30dp"
    android:layout_height="36dp"
    android:src="@drawable/user_support"
    >

</ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/user_tv_getSupport"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="获赞"
        ></TextView>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:src="@drawable/user_view"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/user_tv_view"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="关注"
        ></TextView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:src="@drawable/user_fans"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/user_tv_fans"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="粉丝"
        ></TextView>
</LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="380dp"
            android:background="@color/black"
            android:text="" />


        <LinearLayout
            android:layout_marginTop="385dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


        <LinearLayout
            android:id="@+id/user_ly_fram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/user_tabLy"
                style="@style/MyTablayoutstyle"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/user_viewpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></androidx.viewpager.widget.ViewPager>


        </LinearLayout>

        <include layout="@layout/foot_layout"></include>
    </FrameLayout>



</LinearLayout>